#---ZeroSizedMemoryRegionWarn.test--------------------- Executable,LS------------------#
#BEGIN_COMMENT
# This test verifies that the linker emits a warning for zero sized memory
# regions
#END_COMMENT
#START_TEST
RUN: %touch %t1.1.o
RUN: %link %emulation %linkopts -o %t1.1.out %t1.1.o -T %p/Inputs/script.t -Wlinker-script 2>&1 | %filecheck %s
RUN: %link %emulation %linkopts -o %t1.1.out %t1.1.o -T %p/Inputs/script.t -Wno-linker-script 2>&1 | %filecheck %s --allow-empty --check-prefix NOWARNLS
#END_TEST

CHECK: Warning: {{.*}}script.t: Memory region 'A' has zero size

NOWARNLS-NOT: has zero size
