#---SectionWithZeroSizedSymbolAndPadding.test--------------------------- Executable --------------------#

#BEGIN_COMMENT
# This checks that the text map file has the empty section recorded if it has a zero sized
# symbol in it
#END_COMMENT
#START_TEST
RUN: %clang %clangopts -c %p/Inputs/x.s -o %t.x.o
RUN: %clang %clangopts -c %p/Inputs/main.c -o %t.main.o
RUN: %link -MapStyle txt %linkopts %t.x.o %t.main.o -o %t.main.out1 -T %p/Inputs/padding_script.t -Map %t.main.map1 --trace=section=.text.baz -Wall  2>&1 | %filecheck %s
RUN: %link -MapStyle txt %linkopts %t.x.o %t.main.o -o %t.main.out2 -T %p/Inputs/padding_script.t -Map %t.main.map2 --trace=section=.text.baz -Wzero-sized-sections 2>&1 | %filecheck %s
RUN: %filecheck %s < %t.main.map1 --check-prefix=MAPCHECK
RUN: %filecheck %s < %t.main.map2 --check-prefix=MAPCHECK
#CHECK: Warning: Zero sized fragment .foo for non zero sized symbol sym from input file {{.*}}x.o
#CHECK: Input Section : .text.baz PMA : 0x{{[0-9]+}} VMA : 0x{{[0-9]+}} Offset : 0x{{[0-9]+}} Size : 0x0
#MAPCHECK: .text.bar
#MAPCHECK: {{^.text.baz}}
#END_TEST
